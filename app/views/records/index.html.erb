<h1>Listing records</h1>

<table>
  <tr>
    <th>Year</th>
    <th>Month</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.year %></td>
    <td><%= record.month %></td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


<table class="table table-hover table-striped">
  <thead>
    <th>Year</th>
    <th>Month</th>
    <% @revenue_codes.each do |revenue_code| %>
      <th><%= revenue_code.name %></th>
    <% end %>
  </thead>

  <tbody>  
<% @records.each do |record| %>
    <tr>
      <td><%= record.year %></td>
      <td><%= record.month %></td>
      <% record.actual_values.each do |actual_value_record| %>
        <td><%= actual_value_record.value.to_s %></th>
      <% end %>
    </tr>
<% end %>
  </tbody>
  </table>
<br />

<%= link_to 'New Record', new_record_path %>
